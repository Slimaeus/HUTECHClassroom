@model HUTECHClassroom.Domain.Entities.Group

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Group</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Leader)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Leader is { })
                @Html.DisplayFor(model => Model.Leader.UserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Classroom)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Classroom is { })
                @Html.DisplayFor(model => Model.Classroom.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreateDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
    </dl>
    <h5>@Html.DisplayNameFor(model => model.GroupUsers)</h5>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.GroupUsers.First().User!.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GroupUsers.First().User!.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GroupUsers.First().User!.LastName)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.GroupUsers)
            {
                <tr>
                    <td>
                        @if (item.User is { })
                            @Html.DisplayFor(modelItem => item.User.UserName)

                    </td>
                    <td>
                        @if (item.User is { })
                            @Html.DisplayFor(modelItem => item.User.FirstName)

                    </td>
                    <td>
                        @if (item.User is { })
                            @Html.DisplayFor(modelItem => item.User.LastName)

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="ImportGroupUsers" asp-route-id="@Model?.Id">Import Users</a> |
    <a asp-action="Index">Back to List</a>
</div>
