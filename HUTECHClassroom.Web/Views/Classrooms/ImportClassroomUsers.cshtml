@using HUTECHClassroom.Web.ViewModels.Classrooms;
@model ImportUsersToClassroomViewModel
<h1>Add Users</h1>

<div>
    <h4>Add Users to Classroom</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClassroomTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClassroomTitle)
        </dd>
    </dl>
    <form asp-action="ImportClassroomUsers" method="post" enctype="multipart/form-data">
        @ViewBag.Error
        <div class="form-group">
            <label for="excelFile">Select an Excel file to import:</label>
            <input asp-for="File" type="file" class="form-control-file" />
            <input type="hidden" asp-for="ClassroomId" />
            <input type="hidden" asp-for="ClassroomTitle" />
        </div>
        <button type="submit" class="btn btn-primary">Import</button>
    </form>
</div>
