@model HUTECHClassroom.Domain.Entities.Classroom

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Classroom</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Topic)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Topic)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Room)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Room)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Lecturer)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Lecturer is { Id: { } })
            {
                @Html.DisplayFor(model => Model.Lecturer.Id)
            } 
            else
            {
                @Html.DisplayFor(model => Guid.Empty)
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Faculty)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Faculty != null)
            {
                @Html.DisplayFor(model => Model.Faculty.Name)
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Subject != null)
            {
                @Html.DisplayFor(model => Model.Subject.Title)
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreateDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
    </dl>
    <h5>@Html.DisplayNameFor(model => model.ClassroomUsers)</h5>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ClassroomUsers.First().User!.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClassroomUsers.First().User!.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClassroomUsers.First().User!.LastName)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ClassroomUsers)
            {
                <tr>
                    <td>
                        @if (item.User != null)
                        {
                            @Html.DisplayFor(model => item.User.UserName)
                        }
                    </td>
                    <td>
                        @if (item.User != null)
                        {
                            @Html.DisplayFor(model => item.User.FirstName)
                        }
                    </td>
                    <td>
                        @if (item.User != null)
                        {
                            @Html.DisplayFor(model => item.User.LastName)
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="ImportClassroomUsers" asp-route-id="@Model?.Id">Import Users</a> |
    <a asp-action="Index">Back to List</a>
</div>
